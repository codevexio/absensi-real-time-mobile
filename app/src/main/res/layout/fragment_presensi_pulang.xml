<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/bg">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerPresensiPulang"
        android:layout_marginTop="50dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presensi Pulang"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/refresh_pulang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/refresh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Maps -->
    <fragment
        android:id="@+id/maps"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerPresensiPulang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Lokasi -->
    <TextView
        android:id="@+id/lokasiPulang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nama Jalan"
        android:padding="10dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:textColor="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/maps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Waktu -->
    <TextView
        android:id="@+id/titleWaktu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Waktu"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/lokasiPulang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/waktuPulang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Waktu"
        android:padding="10dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:textColor="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/titleWaktu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Shift -->
    <TextView
        android:id="@+id/titleShift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Shift"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/waktuPulang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/shift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Shift"
        android:padding="10dp"
        android:background="@drawable/border2"
        android:fontFamily="@font/poppinsregular"
        android:textSize="14sp"
        android:textColor="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/titleShift"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Upload Foto -->
    <TextView
        android:id="@+id/titleFoto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload Foto"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/shift"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="370dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleFoto">

        <!-- Border tetap solid -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border2" />

        <!-- Gambar kamera dengan alpha -->
        <ImageView
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:scaleType="center"
            android:src="@drawable/camera" />
    </FrameLayout>

    <!-- Tombol Kirim -->
    <Button
        android:id="@+id/buttonPulang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Kirim"
        android:backgroundTint="@color/green"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
