<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PersetujuanCutiActivity">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerPresensiMasuk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="20dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Persetujuan Cuti"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:fontFamily="@font/poppinsmedium"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Nama Karyawan -->
    <TextView
        android:id="@+id/titleWaktu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nama Karyawan"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/headerPresensiMasuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <TextView
        android:id="@+id/waktuMasuk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:padding="10dp"
        android:alpha="0.8"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/titleWaktu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"/>

    <!-- Tanggal Pengajuan -->
    <TextView
        android:id="@+id/titleShift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tanggal Pengajuan"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/waktuMasuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/shift"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:padding="10dp"
        android:alpha="0.8"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/titleShift"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"/>

    <!-- Dokumen Cuti -->
    <TextView
        android:id="@+id/cutidokumen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dokumen Cuti"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsmedium"
        app:layout_constraintTop_toBottomOf="@id/shift"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <TextView
        android:id="@+id/dokumencuti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:padding="10dp"
        android:alpha="0.8"
        android:textSize="14sp"
        android:fontFamily="@font/poppinsregular"
        app:layout_constraintTop_toBottomOf="@id/cutidokumen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"/>

    <!-- Radio Group -->
    <RadioGroup
        android:id="@+id/radioGroupCuti"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/dokumencuti"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/radioTahunan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disetujui"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp" />

        <Space
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <RadioButton
            android:id="@+id/radioSakit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tidak Disetujui"
            android:fontFamily="@font/poppinsregular"
            android:textSize="14sp" />
    </RadioGroup>

    <!-- Button -->
    <Button
        android:id="@+id/buttonMasuk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppinsmedium"
        android:text="Kirim"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupCuti"
        app:layout_constraintVertical_bias="0.203" />

</androidx.constraintlayout.widget.ConstraintLayout>
