<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detailScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/layoutRoot"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rincian Presensi Bulanan"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingBottom="16dp" />

        <!-- Horizontal scroll agar tabel bisa digeser jika terlalu lebar -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <TableLayout
                android:id="@+id/tablePresensi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:shrinkColumns="*">

                <!-- Header Tabel -->
                <TableRow>
                    <TextView
                        android:text="Tgl"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        style="@style/TableHeader" />

                    <TextView
                        android:text="Masuk"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        style="@style/TableHeader" />

                    <TextView
                        android:text="St. Masuk"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        style="@style/TableHeader" />

                    <TextView
                        android:text="Pulang"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        style="@style/TableHeader" />

                    <TextView
                        android:text="St. Pulang"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        style="@style/TableHeader" />

                    <TextView
                        android:text="Shift"
                        android:textSize="12sp"
                        android:maxLines="2"
                        android:gravity="center"
                        style="@style/TableHeader" />
                </TableRow>

                <!-- Data baris akan ditambahkan dari Kotlin -->

            </TableLayout>
        </HorizontalScrollView>

        <!-- Tombol Download PDF -->
        <Button
            android:id="@+id/btnDownloadPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download PDF"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
